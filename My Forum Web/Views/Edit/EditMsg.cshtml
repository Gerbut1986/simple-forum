@model My_Forum_Web.Models.ForumMsg

@{
    ViewBag.Title = "EditMsg";
}

    <h1 style="text-align:center;font-family:'Times New Roman';color:blue">Edit Form | Record Id: @ViewBag.id</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Note, new { id="area", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home", "", new { id="back"})
</div>

<style>
    #area{
        width:400px;
        height:100px;
    }
    #back {
        color:maroon;
        border:1px solid maroon;
        border-radius:15px;
        text-decoration:none;
        padding:9px;
    }
        #back:hover {
            background-color: maroon;
            color: aquamarine;
            border: 1px solid maroon;
        }
</style>
