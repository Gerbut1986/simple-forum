@model IEnumerable<string>
@{
    ViewBag.Title = "All Files";
}


@if (ViewBag.check == true)
{
    <h2 style="        text-align: center;
        color: red;
        border-radius: 13px;
        border:1px solid red;
        padding:18px;
">
        @ViewBag.Empty
    </h2>
}
else
{
    <h1 style="color:darkorange;font-weight:bold;text-align:center">All Uploaded Files</h1>

    using (Html.BeginForm())
    {
        foreach (var item in Model)
        {
            <div id="frame">
                <a style="margin:0 0 0 40px" id="itemId" href="~/UploadsFiles/@item">@item</a>
                @*<button type="submit" class="btn-ok" id="del_btn">Delete</button>*@
                 @Html.ActionLink($"Delete", "DeleteFile", "Home", new { item = item }, new { id = "del_btn" })
                <br />
            </div>
        }
    }

   
}

